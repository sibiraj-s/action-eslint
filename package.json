{
  "name": "action-eslint",
  "version": "4.0.0",
  "description": "GitHub Action that runs ESLint for files changed in a Pull Request",
  "author": "sibiraj-s",
  "license": "MIT",
  "private": "true",
  "repository": "https://github.com/sibiraj-s/action-eslint.git",
  "bugs": "https://github.com/sibiraj-s/action-eslint/issues",
  "homepage": "https://github.com/sibiraj-s/action-eslint#readme",
  "main": "lib/main.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "eslint",
    "github-action",
    "action-eslint",
    "lint-changed-files",
    "ci"
  ],
  "scripts": {
    "lint": "eslint . --ext js,ts --ignore-path .gitignore",
    "dev": "tsdown --watch",
    "build": "tsdown",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "ignore": "^7.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@types/node": "^22.16.0",
    "commitlint-config-non-conventional": "^1.0.1",
    "eslint": "^9.30.1",
    "eslint-config-pegasus": "^6.0.2",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3"
  }
}
